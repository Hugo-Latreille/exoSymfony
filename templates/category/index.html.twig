{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block nav %}

	<a class="nav-item nav-link" href="{{ path('plat_index') }}">Les plats</a>
	<a class="nav-item nav-link active" href="{{ path('category_index') }}">Les cat√©gories</a>

{% endblock %}

{% block body %}
	<h1>Category index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.name }}</td>
					<td>
						<a class="btn btn-info" href="{{ path('category_show', {'id': category.id}) }}">show</a>
						<a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('category_new') }}">Create new</a>
{% endblock %}
