{% extends 'base.html.twig' %}

{% block title %}Plat index
{% endblock %}

{% block nav %}

	<a class="nav-item nav-link active" href="{{ path('plat_index') }}">Les plats</a>
	<a class="nav-item nav-link" href="{{ path('category_index') }}">Les cat√©gories</a>

{% endblock %}
{% block body %}
	<h1>Plat index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Categorie</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for plat in plats %}
				<tr>
					<td>{{ plat.id }}</td>
					<td>{{ plat.nom }}</td>
					<td>
						{% if plat.Category.name is defined %}
							{{ plat.Category.name }}
						{% endif %}
					</td>
					<td>{{ plat.description }}</td>
					<td>

						<a class="btn btn-info" href="{{ path('plat_show', {'id': plat.id}) }}">show</a>
						<a class="btn btn-warning" href="{{ path('plat_edit', {'id': plat.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a class="btn btn-primary" href="{{ path('plat_new') }}">Create new</a>
{% endblock %}
